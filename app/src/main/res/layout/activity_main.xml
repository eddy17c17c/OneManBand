<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mixbg"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

        <ImageButton
            android:id="@+id/drumImageBtn"
            android:layout_width="118dp"
            android:layout_height="121dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="drum"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ringImageBtn"
            app:srcCompat="@drawable/drum" />

        <ImageButton
            android:id="@+id/mixImageBtn"
            android:layout_width="192dp"
            android:layout_height="121dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="96dp"
            android:background="@null"
            android:contentDescription="mix"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mix" />

        <ImageButton
            android:id="@+id/listImageBtn"
            android:layout_width="118dp"
            android:layout_height="121dp"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="60dp"
            android:background="@null"
            android:contentDescription="list"
            android:padding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/ringImageBtn"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mixImageBtn"
            app:srcCompat="@drawable/list" />

        <ImageButton
            android:id="@+id/pianoImageBtn"
            android:layout_width="118dp"
            android:layout_height="121dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="piano"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/drumImageBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listImageBtn"
            app:srcCompat="@drawable/piano" />

        <ImageButton
            android:id="@+id/ringImageBtn"
            android:layout_width="118dp"
            android:layout_height="121dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="60dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:padding="0dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mixImageBtn"
            app:srcCompat="@drawable/ring" />

</android.support.constraint.ConstraintLayout>