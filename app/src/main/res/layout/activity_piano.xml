<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:launchMode="singleTask"
    android:screenOrientation="landscape"
    tools:context="com.example.eddy.onemanband.PianoActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/Do"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="1dp"
        android:longClickable="false"
        android:onClick="playDo"
        app:layout_constraintBottom_toBottomOf="@+id/Re"
        app:layout_constraintEnd_toStartOf="@+id/Re"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Ti"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageButton
        android:id="@+id/Re"
        android:layout_width="0dp"
        android:layout_height="376dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="2dp"
        android:onClick="playRe"
        app:layout_constraintEnd_toStartOf="@+id/Mi"
        app:layout_constraintStart_toEndOf="@+id/Do"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageButton
        android:id="@+id/Mi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:onClick="playMi"
        app:layout_constraintBottom_toBottomOf="@+id/Fa"
        app:layout_constraintEnd_toStartOf="@+id/Fa"
        app:layout_constraintStart_toEndOf="@+id/Re"
        app:layout_constraintTop_toTopOf="@+id/Fa"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageButton
        android:id="@+id/Fa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="playFa"
        app:layout_constraintBottom_toBottomOf="@+id/La"
        app:layout_constraintEnd_toStartOf="@+id/So"
        app:layout_constraintStart_toEndOf="@+id/Mi"
        app:layout_constraintTop_toTopOf="@+id/So"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageButton
        android:id="@+id/So"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="2dp"
        android:onClick="playSo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/La"
        app:layout_constraintStart_toEndOf="@+id/Fa"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageButton
        android:id="@+id/La"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="12dp"
        android:onClick="playLa"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/Ti"
        app:layout_constraintStart_toEndOf="@+id/So"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageButton
        android:id="@+id/Ti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:onClick="playTi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/La"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/colorBackgroundFloating" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="448dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pianokey" />

</android.support.constraint.ConstraintLayout>
